<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/Rt1"
    android:background="#55AA99"
    tools:context=".AnalysisIncomeActivity">
    <LinearLayout
        android:id="@+id/Ll_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#006699">
        <TextView
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:text="时间"
            android:textColor="#ffffff"
            android:gravity=""/>
        <EditText
            android:id="@+id/Et_date1"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text=""
            android:hint=""
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:text="至"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:gravity=""/>
        <EditText
            android:id="@+id/Et_date2"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textColor="#ffffff"/>
        />
        <Button
            android:id="@+id/btn_pie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/Rg_1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_zhichu"
        android:padding="8dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/bt_huafei"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_zhichu_button"
            android:layout_weight="1"
            android:text="花费"
            android:gravity="center"
            android:textColor="#ffffff"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/bt_shouru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_zhichu_button"
            android:layout_weight="1"
            android:text="收入"
            android:gravity="center"
            android:textColor="#ffffff"
            android:button="@null"/>
    </RadioGroup>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/Rg_1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />
    <RelativeLayout
        android:id="@+id/R1"
        android:layout_above="@id/R2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/total_gongzhi"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="工资收入"
            android:textColor="#ffff"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/total_gongzhi2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:hint="(元）"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/total_zhuanzhang"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:text="转账收入"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/total_zhuanzhuang2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            android:hint="(元）"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ffff"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/R2"
        android:layout_above="@id/R3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/total_jiangjin"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="奖金收入"
            android:textColor="#ffff"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/total_jiangjin2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:hint="(元）"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/total_touzhi"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:text="投资收入"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/total_touzhi2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            android:hint="(元）"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ffff"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/R3"
        android:layout_above="@id/Rl_buttom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/total_qita"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="其他收入"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ffff"/>
        <TextView
            android:id="@+id/total_qita2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:hint="(元）"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/total_income"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="0dp"
            android:background="#FFE4E1"
            android:gravity="center"
            android:hint="总收入"
            android:textColor="#ffff"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/total_income2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="240dp"
            android:hint="(元）"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ffff"/>


    </RelativeLayout>

    <RadioGroup
        android:id="@+id/Rl_buttom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/btn_jizhang"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="26dp"
            android:text="记账"
            android:textSize="10dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/bg_radio_buttom"
            />
        <RadioButton
            android:id="@+id/btn_chakanzhangdan"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:text="查看账单"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_alignLeft="@id/btn_jizhang"
            android:button="@null"
            android:background="@drawable/bg_radio_buttom"/>
        <RadioButton
            android:id="@+id/btn_fenxibaogao"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="分析报告"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_alignLeft="@id/btn_jizhang"
            android:button="@null"
            android:background="@drawable/bg_radio_buttom"/>
        <RadioButton
            android:id="@+id/btn_yonghuzhongxin"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="用户中心"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_alignLeft="@id/btn_jizhang"
            android:button="@null"
            android:background="@drawable/bg_radio_buttom"/>
    </RadioGroup>

</RelativeLayout>